{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Boreas Configuration Schema",
  "type": "object",
  "required": [
    "model_id",
    "start_date",
    "end_date",
    "frequency",
    "hourly_increment",
    "output_directory",
    "bbox",
    "raster_templates"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "model_id": {
      "type": "string",
      "minLength": 5,
      "description": "Model identifier. Used for naming output files"
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "Start date in YYYY-MM-DD format"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "End date in YYYY-MM-DD format"
    },
    "frequency": {
      "type": "string",
      "enum": ["daily", "weekly", "monthly"],
      "description": "Processing frequency"
    },
    "hourly_increment": {
      "type": "integer",
      "minimum": 1,
      "maximum": 24,
      "description": "Hourly increment for processing"
    },
    "output_directory": {
      "type": "string",
      "minLength": 1,
      "description": "Directory path for output files"
    },
    "bbox": {
      "type": "object",
      "required": ["xmin", "xmax", "ymin", "ymax"],
      "properties": {
        "xmin": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "description": "Minimum longitude"
        },
        "xmax": {
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "description": "Maximum longitude"
        },
        "ymin": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "description": "Minimum latitude"
        },
        "ymax": {
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "description": "Maximum latitude"
        }
      },
      "additionalProperties": false
    },
    "raster_templates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "base_directory",
          "filename_pattern",
          "date_format"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Template name identifier"
          },
          "base_directory": {
            "type": "string",
            "minLength": 1,
            "description": "Base directory path for raster files"
          },
          "filename_pattern": {
            "type": "string",
            "minLength": 1,
            "pattern": ".*\\{.*\\}.*",
            "description": "Filename pattern with date placeholder {}"
          },
          "date_format": {
            "type": "string",
            "enum": ["YYYYMMDD", "YYYY-MM-DD", "YYYYDDD"],
            "description": "Date format for filename substitution"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
